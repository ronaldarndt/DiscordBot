{
  "compilerOptions": {
    "module": "CommonJS",
    "strict": true,
    "target": "ES6",
    "noImplicitAny": true,
    "outDir": "dist",
    "sourceRoot": "src",
    "sourceMap": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "types": []
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
